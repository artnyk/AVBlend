@model List<WebApp.Models.Model>
@{
    ViewBag.Title = "MyModels";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count > 0)
{
    <div id="heading-breadcrumbs" style="margin-bottom: 40px;">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>My Models</h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li>@Html.ActionLink("Manage", "Index", "Manage")</li>
                        <li>My Models</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="content">
        <div class="container">
            <div class="col-md-9">
                <div class="row products">
                    @foreach (var item in Model)
                {
                        <div class="col-md-3 col-sm-4">
                            <div class="product">
                                <div class="image">
                                    <a href="~/Manage/Model/@item.ModelID">
                                        <img src="~/Files/model-@item.ModelID/@item.Name-.jpg" alt="" class="img-responsive image1">
                                    </a>
                                </div>
                                <div class="text">
                                    <h3><a href="~/Models/Details/@item.ModelID">@Html.DisplayFor(modelItem => item.Name)</a></h3>
                                    <p class="price">$@Html.DisplayFor(modelItem => item.Price)</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default sidebar-menu">

                    <div class="panel-heading">
                        <h3 class="panel-title">Customer section</h3>
                    </div>

                    <div class="panel-body">

                        <ul class="nav nav-pills nav-stacked">
                            <li>
                                <a href="~/Manage/Index"><i class="fa fa-user"></i> My account</a>
                            </li>
                            <li class="active">
                                <a href="~/Manage/MyModels"><i class="fa fa-heart"></i> My Models</a>
                            </li>
                            <li>
                                <a href="~/Manage/MyOrders"><i class="fa fa-list"></i> My orders</a>
                            </li>
                            <li>
                                <a href="~/Manage/UploadModel"><i class="fa fa-desktop"></i>Upload Model</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            </div>
    </div>
}
else
{
    <div id="heading-breadcrumbs" style="margin-bottom: 40px;">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1></h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>gdgg</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}


